# Enable hoisting for better dependency management
hoist-pattern[]=*

# Auto install peers
auto-install-peers=true

# Use pnpm for all package management
prefer-frozen-lockfile=true

# Enable shamefully-hoist for compatibility with some packages
shamefully-hoist=true

# Set strict peer deps to false for development
strict-peer-dependencies=false

# Cache settings
store-dir=~/.pnpm-store

# Registry settings (uncomment and modify if using private registry)
# registry=https://registry.npmjs.org/

# Progress settings
progress=true

# Logging
loglevel=warn