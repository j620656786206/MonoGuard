# Development Dockerfile for Next.js Frontend
FROM node:18-alpine

WORKDIR /app

# Install pnpm
RUN corepack enable pnpm

# Install dependencies
RUN apk add --no-cache libc6-compat

# Copy package files
COPY package*.json pnpm-lock.yaml* ./

# Install dependencies
RUN pnpm install

# Copy source code
COPY . .

# Expose port
EXPOSE 3000

# Run in development mode
CMD ["pnpm", "dev"]