{
  "name": "@monoguard/cli",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/cli",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "make build",
        "cwd": "apps/cli"
      },
      "outputs": ["{projectRoot}/dist"]
    },
    "build-all": {
      "executor": "nx:run-commands",
      "options": {
        "command": "make build-all",
        "cwd": "apps/cli"
      },
      "outputs": ["{projectRoot}/dist"]
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "make test",
        "cwd": "apps/cli"
      }
    },
    "test:coverage": {
      "executor": "nx:run-commands",
      "options": {
        "command": "make test-coverage",
        "cwd": "apps/cli"
      },
      "outputs": ["{projectRoot}/coverage.out", "{projectRoot}/coverage.html"]
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "make clean",
        "cwd": "apps/cli"
      }
    }
  },
  "tags": []
}
